{% extends 'base.html.twig' %}

{% block body %}
	<h1>{{ actor.name }}</h1>

	<strong>Série :</strong>
	<ul>
		{% for program in actor.programs %}
			<li>
				<a href="{{path('program_show', {id: program.id})}}">{{ program.title }}</li>
			</li>
		</a>
	{% else %}
		<li>Aucune série cet acteur</li>
	{% endfor %}
</ul>{% endblock %}
