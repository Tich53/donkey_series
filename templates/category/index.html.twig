{% extends 'base.html.twig' %}

{% block title %}Catégories
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Liste des catégories</h1>
		<ul>
			{% for category in categories %}
				<li>{{loop.index}}
					-
					{{ category.name }}</li>
				<a style="color:yellow" href="{{ path('category_show', {categoryName: category.name}) }}">
					Voir la liste des films</a>
			{% endfor %}
		</ul>
	</div>
{% endblock %}
