{% extends 'base.html.twig' %}

{% block title %}Catégories
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Liste des film dans la catégorie
			{{ categoryName }}</h1>

		{% for program in programs %}
			<h2>{{program.id}}
				-
				{{ program.title }}</h2>
			<p>{{ program.summary}}</p>
			{# 			<img src={{program.poster}} alt="poster"> #}
			<div>
				<a style="color:yellow" href="{{ path('program_show', {id : program.id}) }}">
					Voir la fiche
				</a>
			</div>

		{% endfor %}

	</div>
{% endblock %}
